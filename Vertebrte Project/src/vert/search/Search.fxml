<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vert.search.SearchController">
   <left>
      <VBox prefHeight="200.0" prefWidth="125.0" style="-fx-background-color: #303030;" BorderPane.alignment="CENTER" />
   </left>
   <center>
      <HBox prefHeight="100.0" prefWidth="200.0" style="-fx-background-color: #404040;" BorderPane.alignment="CENTER">
         <children>
            <BorderPane prefHeight="200.0" prefWidth="675.0">
               <top>
                  <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Search" textFill="#fcfafa">
                           <font>
                              <Font size="48.0" />
                           </font>
                           <HBox.margin>
                              <Insets bottom="20.0" top="20.0" />
                           </HBox.margin>
                        </Label>
                     </children>
                  </HBox>
               </top>
               <left>
                  <VBox alignment="CENTER" prefHeight="500.0" prefWidth="332.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Sort By:" textFill="WHITE">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="sortBox" onAction="#handleQueryOptions" prefHeight="35.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets bottom="30.0" top="10.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Label text="Query:" textFill="WHITE">
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="queryBox" prefHeight="35.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#getResults" text="Search">
                           <VBox.margin>
                              <Insets bottom="20.0" top="50.0" />
                           </VBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </left>
               <right>
                  <VBox alignment="CENTER" prefHeight="500.0" prefWidth="333.0" BorderPane.alignment="CENTER">
                     <children>
                        <Label text="Results" textFill="WHITE">
                           <VBox.margin>
                              <Insets bottom="10.0" top="50.0" />
                           </VBox.margin>
                           <font>
                              <Font size="36.0" />
                           </font>
                        </Label>
                        <ComboBox fx:id="resultBox" prefHeight="35.0" prefWidth="200.0">
                           <VBox.margin>
                              <Insets top="10.0" />
                           </VBox.margin>
                        </ComboBox>
                        <Button fx:id="confirmBtn" mnemonicParsing="false" onAction="#handleConfirm" text="Confirm">
                           <VBox.margin>
                              <Insets bottom="80.0" top="50.0" />
                           </VBox.margin>
                           <font>
                              <Font size="18.0" />
                           </font>
                        </Button>
                     </children>
                  </VBox>
               </right>
               <center>
                  <Separator orientation="VERTICAL" prefHeight="200.0" BorderPane.alignment="CENTER" />
               </center>
            </BorderPane>
         </children>
      </HBox>
   </center>
</BorderPane>
