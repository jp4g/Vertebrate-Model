<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9" xmlns:fx="http://javafx.com/fxml/1" fx:controller="vert.view.SideBarController">
   <left>
      <VBox prefHeight="600.0" prefWidth="125.0" style="-fx-background-color: #303030;" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="homeBtn" mnemonicParsing="false" onAction="#loadHome" prefHeight="40.0" prefWidth="141.0" style="-fx-background-color: transparent; -fx-text-fill: #f0f0f0;" text="Home">
               <VBox.margin>
                  <Insets />
               </VBox.margin></Button>
            <Button fx:id="searchBtn" mnemonicParsing="false" onAction="#loadSearch" prefHeight="40.0" prefWidth="187.0" style="-fx-background-color: transparent; -fx-text-fill: #f0f0f0;" text="Search">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="compareBtn" mnemonicParsing="false" onAction="#loadCompare" prefHeight="40.0" prefWidth="171.0" style="-fx-background-color: transparent; -fx-text-fill: #f0f0f0;" text="Compare">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="databaseBtn" mnemonicParsing="false" onAction="#loadDatabase" prefHeight="40.0" prefWidth="124.0" style="-fx-background-color: transparent; -fx-text-fill: #f0f0f0;" text="Database">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="helpBtn" mnemonicParsing="false" onAction="#showHelp" prefHeight="40.0" prefWidth="136.0" style="-fx-background-color: transparent; -fx-text-fill: #f0f0f0;" text="Help">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin></Button>
            <Button fx:id="creditsBtn" mnemonicParsing="false" onAction="#showCredits" prefHeight="40.0" prefWidth="136.0" style="-fx-background-color: transparent; -fx-text-fill: #f0f0f0;" text="Credits">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
            </Button>
            <ImageView fitHeight="150.0" fitWidth="125.0" pickOnBounds="true" preserveRatio="true">
               <VBox.margin>
                  <Insets top="200.0" />
               </VBox.margin>
               <image>
                  <Image url="@../res/M%20PNG.png" />
               </image>
            </ImageView>
         </children>
      </VBox>
   </left>
</BorderPane>
